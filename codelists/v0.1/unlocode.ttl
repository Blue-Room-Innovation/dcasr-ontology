@prefix : <https://blue-room-innovation.github.io/dcasr-ontology/codelists/v0.1/unlocode.ttl#> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix dcterms: <http://purl.org/dc/terms/> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

@base <https://blue-room-innovation.github.io/dcasr-ontology/codelists/v0.1/unlocode.ttl> .

<https://blue-room-innovation.github.io/dcasr-ontology/codelists/v0.1/unlocode.ttl> a owl:Ontology ;
    rdfs:label "UN/LOCODE Reference Vocabulary"@en ;
    owl:versionInfo "0.1" ;
    rdfs:comment "A SKOS reference vocabulary representing the UN/LOCODE (United Nations Code for Trade and Transport Locations) standard maintained by UNECE. It provides a global reference for ports, airports, railway stations, and other trade-related geographical locations."@en ;
    dcterms:creator "CircularPass Ontology Team" ;
    dcterms:source <https://unece.org/trade/cefact/unlocode-code-list-country-and-territory> ;
    dcterms:issued "2025-11-10"^^xsd:date .

#################################################################
#    Concept Scheme
#################################################################

:UNLocodeScheme a skos:ConceptScheme ;
    skos:prefLabel "UN/LOCODE"@en ;
    skos:definition "A standardized code that uniquely identifies geographical locations used in international trade and transport, as defined by UNECE."@en ;
    skos:scopeNote "This scheme references the official UN/LOCODE dataset published by UNECE. Implementations should use codes directly from that source (e.g., ESPMI for Palma de Mallorca, ESBCN for Barcelona)."@en ;
    dcterms:source <https://unece.org/trade/cefact/unlocode-code-list-country-and-territory> .

#################################################################
#    Ontology linkage
#################################################################

:UNLocodeScheme skos:note "Referenced by properties such as :arrivalPort, :nextPlannedDeliveryPort, :lastWasteDeliveryPort, and :nextCollectionPort in the Digital MARPOL Waste Passport ontology. These properties should use valid UN/LOCODE values to identify ports or geographical locations."@en .
